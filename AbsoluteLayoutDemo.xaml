<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FLEX_LAYOUTDEMO_ARFR.AbsoluteLayoutDemo"
             Title="AbsoluteLayoutDemo">
    <AbsoluteLayout Margin="40">

        <!--BLOQUE ROJO-->
        <BoxView Color="#f00"
             AbsoluteLayout.LayoutFlags="PositionProportional"
             AbsoluteLayout.LayoutBounds="0.5, 0, 300, 60"/>

        <!--BLOQUE VERDE-->
        <BoxView Color="#0f0"
             AbsoluteLayout.LayoutFlags="PositionProportional"
             AbsoluteLayout.LayoutBounds="0.5, .12, 400, 150"/>

        <!--BLOQUE AZUL-->
        <BoxView Color="#00f"
             AbsoluteLayout.LayoutFlags="PositionProportional"
             AbsoluteLayout.LayoutBounds="0.5, .85, 380, 60"/>

        <!--BLOQUE AMARILLO-->
        <BoxView Color="#ff0"
             AbsoluteLayout.LayoutFlags="PositionProportional"
             AbsoluteLayout.LayoutBounds="0.5, .96, 350, 60"/>

    </AbsoluteLayout>
</ContentPage>