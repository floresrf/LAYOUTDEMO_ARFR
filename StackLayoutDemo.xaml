<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FLEX_LAYOUTDEMO_ARFR.StackLayoutDemo"
             Title="StackLayoutDemo">
    <VerticalStackLayout>
        <Label
            Text="Ontop" 
            Margin="20"
            VerticalTextAlignment="Center"
            FontSize="18"
            BackgroundColor="#f00"
            HorizontalTextAlignment="Center"
            HeightRequest="150"/>

        <!--Body-->
        <Label
            Text="Onmiddle1"
            FontSize="18"
            Margin="20"
            VerticalTextAlignment="Center"
            BackgroundColor="#0f0"
            HeightRequest="100"
            HorizontalTextAlignment="Center"/>

        <Label
            Text="Onmiddle2"
            FontSize="18"
            Margin="20"
            VerticalTextAlignment="Center"
            BackgroundColor="#f0f"
            HeightRequest="50"
            HorizontalTextAlignment="Center"/>

        <!--Footer-->
        <Label
            Text="Onbottom"
            FontSize="18"
            Margin="20"
            VerticalTextAlignment="Center"
            BackgroundColor="#00f"
            HeightRequest="200"
            HorizontalTextAlignment="Center"/>
    </VerticalStackLayout>
</ContentPage>